<%= form_with model: [@merchant, @item], method: :patch, local: true do |f|  %>
  <%= f.label :name, 'Name:' %>
  <%= f.text_field :name %>

  <%= f.label :description, 'Description:' %>
  <%= f.text_field :description %>

  <%= f.label :unit_price, 'Unit Price:' %>
  <%= f.number_field :unit_price %>

  <%= f.submit 'Update Item' %>
<% end %>
