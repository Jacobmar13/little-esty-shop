<h2><%= @merchant.name %></h2>

<%= button_to 'New Discount', new_merchant_discount_path(@merchant.id), method: :get %>

<h3>Discounts</h3>
<% @merchant.discounts.each do |discount| %>
  <p><%= discount.discount %> percent off purchases of <%= discount.quantity %> items or more.</p>
  <%= button_to 'View Discount', merchant_discount_path(@merchant.id, discount.id), method: :get %>
  <%= button_to 'Delete Discount', merchant_discount_path(@merchant.id, discount.id), method: :delete %><br>
<% end %>

<h3>Upcoming Holidays</h3>
  <p>
    <% api_next_holidays.each do |holiday| %>
      <b><%= holiday.name %></b><br>
      <%= holiday.date %><br>
    <% end %>
  </p>
